html
  margin: 0
  *
    box-sizing: border-box

body
  display: flex
  justify-content: center
  align-items: center
  width: 400px
  height: min-content
  // font-family: 'Helvetica New', Helvetica, sans-serif
  font-family: 'Courier New', Courier, monospace
  padding: 20px 10px 10px
  background-color: #fff4f9
  overflow: hidden
  font-size: 16px


  h1, .h1
    font-size: 2.5em
    margin: 0 0 0.5em

  h2, .h2
    font-size: 2em
    margin: 0 0 0.2em

  h3, .h3
    font-size: 1.5em
    margin: 0 0 0.15em

  h4, .h4
    font-size: 1.3em
    margin: 0 0 0.1em

  h5, .h5
    font-size: 1.15em
    margin: 0 0 0.8em

  p
    font-size: 1em
    margin-bottom: 0.75em
    line-height: 1.3em

h1.title
  text-align: center
  font-family: 'Brush Script MT', cursive

.code
  font-family: 'Courier New', Courier, monospace

.container
  width: 100%
  height: 100%
  display: block

a
  color: #6663fc
  &:hover
    color: #6663fc
    text-decoration: none

button
  color: #000
  font-weight: 600
  background: transparent
  border: 2px solid #000
  cursor: pointer
  padding: 5px 20px

  &:hover
    color: #fff
    background: #000
    border: 2px solid #000

  &:not(.disabled) .off
    display: none

  &.disabled
    background-color: #c3ffd7
    color: #6663fc

    &.on
      display: none
